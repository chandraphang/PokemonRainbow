<div class="container">
  <div class="title-bar">
    <h1 class="title">Pokemon Evolution</h1>
  </div>
  <div class ="padding">
      <h3 class="text-center">Your Pokemon Is Ready to Evolve</h3>
      <h5 class="text-center">Do You Want To Evolve Your Pokemon?</h5>

      <%= image_tag @pokemon_evolve.pokedex.image_url, :alt => 'Pokemon Image', class: 'pokemon-icon img-center' %>
      <h3 class="text-center">Your Pokemon Got a New Skill</h3>
      <table class="table table-bordered">
      <tr>
        <th>Name</th>
        <th>Power</th>
        <th>Max PP</th>
        <th>Element Type</th>
      </tr>
      <tr>
        <td class="col-md-2"><%= @new_skill.name%> </td>
        <td class="col-md-2"><%= @new_skill.power %></td>
        <td class="col-md-2"><%= @new_skill.max_pp %></td>
        <td class="col-md-2"><%= @new_skill.element_type%></td>
      </tr>
    </table>
      <h3 class="text-center"> But Your Pokemon already have 4 skills, do you want to replace one of it?</h3>


      <%= button_to "Yes", pokemon_battle_remove_and_add_random_skill_path(new_skill: @new_skill), :method => 'post', class: 'btn btn-primary btn-remove img-center attack-btn', id: 'custom-btn'%>
      <%= button_to "No", @pokemon_evolve, :method => 'get', class: 'btn btn-danger btn-remove img-center attack-btn', id: 'custom-btn'%>

  </div>
</div>

