<%= form_for(pokemon) do |f| %>
  <% if pokemon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pokemon.errors.count, "error") %> prohibited this pokemon from being saved:</h2>

      <ul>
      <% pokemon.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :Pokedex%>
     <%= f.select("pokedex_id", Pokedex.all.collect {|p| [ p.name, p.id ] }, { include_blank: '-- Please Select Pokedex Below --' }, {:class => "form-control"})%>

     <li class="error_text">
     <%= @pokemon.errors.full_messages_for(:pokedex).join(', ') %>
     </li>

   </div>
 </div>

  <div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :name%>
     <%= f.text_field :name, class:"form-control", placeholder: "Name"%>
     <% if !@pokemon.errors[:name].blank?%>
     <li class="error_text">
     <%= @pokemon.errors.full_messages_for(:name).join(', ') %>
     </li>
     <% end %>
   </div>
 </div>




  <div class="actions form text-center">
    <%= f.button :submit => "", class:"btn btn-default center-block" %>
  </div>
<% end %>
