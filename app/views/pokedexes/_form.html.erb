<%= form_for(pokedex) do |f| %>
<% if pokedex.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pokedex.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% pokedex.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :name%>
     <%= f.text_field :name, class:"form-control", placeholder: "Name"%>
     <% if !@pokedex.errors[:name].blank?%>
     <li class="error_text">
     <%= @pokedex.errors.full_messages_for(:name).join(', ') %>
     </li>
     <% end %>
   </div>
 </div>
