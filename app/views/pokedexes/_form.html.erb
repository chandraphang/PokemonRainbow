<%= form_for(pokedex) do |f| %>
  <% if pokedex.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pokedex.errors.count, "error") %> prohibited this pokedex from being saved:</h2>

      <ul>
      <% pokedex.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :name%>
     <%= f.text_field :name, class:"form-control", placeholder: "Name"%>
 </div>
 </div>
 <div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :base_health_point%>
     <%= f.text_field :base_health_point, class:"form-control", placeholder: "Base Health Point"%>
 </div>
 </div>
 <div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :base_attack%>
     <%= f.text_field :base_attack, class:"form-control", placeholder: "Base Attack"%>
 </div>
 </div>
 <div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :base_defence%>
     <%= f.text_field :base_defence, class:"form-control", placeholder: "Base Defence"%>
 </div>
 </div>
 <div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :base_speed%>
     <%= f.text_field :base_speed, class:"form-control", placeholder: "Base Speed"%>
 </div>
</div>
 <div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :element_type%>
     <%= f.select(:element_type, options_for_select([['Normal', 'Normal'], ['Fire', 'Fire'], ['Fighting', 'Fighting'], ['Water', 'Water'], ['Flying', 'Flying'], ['Grass', 'Grass'], ['Poison', 'Poison'], ['Electric', 'Electric'], ['Ground', 'Ground'], ['Psychic', 'Psychic'], ['Rock', 'Rock'], ['Ice', 'Ice'], ['Bug', 'Bug'], ['Dragon', 'Dragon'], ['Ghost', 'Ghost'], ['Dark', 'Dark'], ['Steel', 'Steel'], ['Fairy', 'Fairy'] ]), {}, { :class => 'form-control' } ) %>
 </div>
</div>
<div class="row control-group">
   <div class="form-group col-xs-12 floating-label-form-group controls">
     <%= f.label :image_url%>
     <%= f.text_field :image_url, class:"form-control", placeholder: "Image URL"%>
 </div>
</div>
  <div class="actions form col-md-11 col-sm-11">
  <%= f.button :submit => "", class:"btn btn-default center-block" %>
</div>
<% end %>

